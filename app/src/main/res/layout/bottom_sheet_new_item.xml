<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textItemTitle"
        style="@style/Text.Title.Bold"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/new_item_container_margin_top"
        android:text="@string/new_item_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editNewItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/new_item_container_margin_horizontal"
        android:layout_marginTop="@dimen/new_item_margin_top"
        android:layout_marginRight="@dimen/new_item_container_margin_horizontal"
        android:inputType="textCapSentences"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textItemTitle" />

    <Button
        android:id="@+id/buttonAddItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/new_item_container_margin_horizontal"
        android:layout_marginTop="@dimen/new_item_margin_top"
        android:layout_marginRight="@dimen/new_item_container_margin_horizontal"
        android:layout_marginBottom="@dimen/new_item_container_margin_bottom"
        android:background="@drawable/button_background"
        android:text="@string/add_item"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editNewItem" />

</androidx.constraintlayout.widget.ConstraintLayout>